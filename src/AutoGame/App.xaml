<Application x:Class="AutoGame.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:autoGame="clr-namespace:AutoGame">
    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ui:Resources Theme="Dark" />
                <ui:Resources Theme="Light" />
            </ResourceDictionary.MergedDictionaries>

            <ResourceDictionary x:Key="TooltipErrorResources">
                <Style TargetType="ToolTip" BasedOn="{StaticResource {x:Type ToolTip}}">
                    <Setter Property="BorderBrush" Value="Red" />
                    <Setter Property="Background" Value="DarkRed" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="ToolTipService.InitialShowDelay" Value="0" />
                </Style>
            </ResourceDictionary>

            <BitmapImage x:Key="AppPng" UriSource="{x:Static autoGame:ResourceStrings.AppPng}" />

        </ResourceDictionary>
    </Application.Resources>
</Application>